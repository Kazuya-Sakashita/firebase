<div class="container mt-5">
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Login</h2>
      <%= form_with url: login_path, local: true, method: :post do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.text_field :email, type: "email", autofocus: "ture", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :passward, class: 'form-label' %>
          <%= f.text_field :passward, type: "passward", autofocus: "ture", class: 'form-control' %>
        </div>
        <%= f.submit "Login", class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "New User? Create Account", signup_path %>
    </div>
  </div>
</div>
